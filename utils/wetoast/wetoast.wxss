/**toast.wxss**/

.wetoast {
  display: none;
}

.wetoast_show {
  display: block;
  width: 100%;
}

.wetoast__mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}

.wetoast__bd {
  opacity: 0;
  display: flex;
  flex-direction: column;
  position: fixed;
  z-index: 5000;
  min-width: 30%;
  max-width: 80%;
  top: 35%;
  left: 50%;
  padding: 10rpx;
  box-sizing: border-box;
  transform: translateX(-50%);
  background: rgba(40, 40, 40, 0.75);
  border-radius: 10rpx;
  color: #fff;
  word-wrap: break-word;
  word-break: break-all;
  align-items: center;
  justify-content: space-around;
}

.wetoast__bd__title {
  margin: 6rpx 0;
  font-size: 32rpx;
}
