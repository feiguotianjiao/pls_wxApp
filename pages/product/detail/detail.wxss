/**index.wxss**/

.close {
  width: 46px;
  height: 46px;
  z-index: 100;
  position: fixed;
  top: 10rpx;
  left: 10rpx;
}

.detail_swiper {
  width: 470rpx;
  height: 470rpx;
  margin: 20rpx auto;
}

.describe {
  width: 690rpx;
  padding: 20rpx 30rpx;
  border-top: 1px solid #e4e4e4;
  position: relative;
}

.describe .name {
  width: 100%;
  line-height: 36rpx;
}

.describe .pri {
  width: 100%;
  line-height: 36rpx;
  margin-top: 8rpx;
}

.describe .addCart {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  width: 60rpx;
  height: 60rpx;
  background: url(http://image.asj.com/images/O2O/icon-cart-60.png) no-repeat;
  background-size: cover;
}

.describe .soldOut {
  width: 160rpx;
  text-align: center;
  background: #999;
  color: #FFF;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}
.describe .toBuy {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #FFF;
  background-color: #e30830;
  text-align: center;
  border-radius: 10rpx;
}

.describe .soldOut {
  background-color: #999;
}

.describe .pri .sale {
  color: #e50039;
  font-weight: bold;
}

.describe .pri .original {
  color: #999;
  display: inline-block;
  margin-left: 20rpx;
  text-decoration: line-through;
}

.evaluate {
  width: 714rpx;
  padding: 0 18rpx;
  padding-bottom: 20rpx;
  border-top: 1px solid #e4e4e4;
}

.evaluate .title {
  width: 690rpx;
  padding: 10rpx 12rpx;
  position: relative;
  background: url(http://pls.asj.com/images/O2O/icon-new-down.png) no-repeat right 20rpx center;
  background-size: 60rpx;
}

.evaluate .title .tip {
  font-size: 1.2em;
  line-height: 50rpx;
  font-weight: bold;
}

.evaluate .title .score {
  line-height: 40rpx;
  color: #999;
}

.evaluate .evaluate_item {
  width: 690rpx;
  padding: 16rpx 12rpx;
  position: relative;
  border-top: 1px solid #e4e4e4;
  overflow: auto;
}

.evaluate .evaluate_item .eval-star {
  float: left;
  height: 36rpx;
  width: 200rpx;
  position: relative;
}

.evaluate .evaluate_item .grayStar {
  height: 100%;
  position: absolute;
  z-index: 1;
  top: 0px;
  left: 0px;
}

.evaluate .evaluate_item .lightStar {
  height: 100%;
  position: absolute;
  z-index: 2;
  top: 0px;
  left: 0px;
  overflow: hidden;
}

.evaluate .evaluate_item .eval-txt {
  height: 36rpx;
  line-height: 36rpx;
  text-align: right;
  float: right;
  color: #a1a1a1;
}

.evaluate .evaluate_item .eval-main {
  float: left;
  font-size: 30rpx;
  line-height: 36rpx;
  text-align: left;
  width: 100%;
  padding-top: 8rpx;
}

.morePd {
  width: 100%;
  border-top: 1px solid #e4e4e4;
  border-bottom: 1px solid #e4e4e4;
}

.morePd .title {
  width: 690rpx;
  padding: 10rpx 30rpx;
  font-size: 1.2em;
  font-weight: bold;
}

.morePd .pdList {
  width: 750rpx;
  border-top: 1px solid #e4e4e4;
  overflow: auto;
}

.morePd .pdList .pdShow {
  width: 250rpx;
  border-left: 1px solid #e4e4e4;
  float: left;
  box-sizing: border-box;
}

.morePd .pdList .pdShow image {
  width: 234rpx;
  height: 234rpx;
  display: block;
  margin: 30rpx auto;
}

.morePd .pdList .pdShow .name {
  width: 234rpx;
  height: 32rpx;
  line-height: 32rpx;
  margin: 8rpx auto;
}

.morePd .pdList .pdShow .pri {
  width: 234rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #e50039;
  margin: 8rpx auto;
}

.moreContent {
  width: 100%;
  border-top: 1px solid #e4e4e4;
  padding-bottom: 240rpx;
}

.moreContent .tip {
  width: 100%;
  height: 56rpx;
  text-align: center;
  position: relative;
}

.moreContent .tip::before {
  content: '';
  height: 1px;
  border-top: 1px solid #ccc;
  width: 96%;
  position: absolute;
  top: 50%;
  margin-top: -1px;
  left: 2%;
}

.moreContent .tip .txt{
  
    position: relative;
    padding: 0 16rpx;
    background-color: #FFF;
    display: inline-block;
    height: 56rpx;
    line-height: 56rpx;
    color: #999;
}
.toTop{
  bottom: 120rpx;
}
@import "../../common/shopCart/shopCart.wxss"